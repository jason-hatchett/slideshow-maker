<section class="banner-all">
  <div class="small-12 columns">
    <a href="/">
      <%= image_tag("cloud7.png", :size => "150x150")%>
    </a>
    <a href="/videos" class="button radius" id="searchbutton"> SEARCH VIDEOS </a>
    <a href="/search" class="button radius" id="createbutton"> CREATE VIDEO </a>
  </div>
  <br>
  <br>
</section>



<div class="small-3 small-centered columns">
<h2>All Videos:</h2>
<%= text_field_tag :search_filter, nil, :placeholder => "Filter By Video Name or Creation Tag" %>
<div id="videos">
  <% @videos.reverse_each do |video| %>
    <ul><%= link_to video.title, "/videos/#{video.id}" %></ul>
  <% end %>
</div>
</div>


<script>

$('#search_filter').change(function() { 
  $('#videos').empty()
  <% @videos.reverse_each do |video| %>
  var filtery = $('#search_filter').val().toLowerCase()
  if ("<%= video.title %>".toLowerCase().indexOf(filtery) > -1 || "<%= video.tag %>".toLowerCase().indexOf(filtery) > -1){
    $('#videos').append('<ul><%= link_to video.title, "/videos/#{video.id}" %></ul>');
  }
  <% end %>
});


</script>