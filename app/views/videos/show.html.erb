<script>
  <link href="//vjs.zencdn.net/4.11/video-js.css" rel="stylesheet">
  <script src="//vjs.zencdn.net/4.11/video.js"></script>
</script>

<section class="banner-all">
  <div class="small-12 columns">
    <a href="/">
      <%= image_tag("cloud7.png", :size => "150x150")%>
    </a>
    <a href="/videos" class="button radius" id="searchbutton"> SEARCH VIDEOS </a>
    <a href="/search" class="button radius" id="createbutton"> CREATE VIDEO </a>
  </div>
  <br>
  <br>
</section>


<center>

<h1><%= @video.title %></h1>

<h3><%= @video.tag %></h3>

<video class="video-js vjs-default-skin"
  controls preload="auto" width="640" height="640"
  data-setup='{"example_option":true}'>
 <source src="<%= @video.url %>" type='video/mp4' />
 <p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
</video>

<h3>Views: <%= @video.views %></h3>

</center>